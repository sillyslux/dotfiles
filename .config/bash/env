#!/bin/bash

PATH=$HOME/.bin:$PATH

export HISTFILESIZE=-1
export HISTSIZE=-1
export HISTTIMEFORMAT="%F %T "
export HISTFILE=~/.bash_eternal_history
PROMPT_COMMAND="history -a"

git_branch () {
	git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'
}

PS1='\n\[\033[01;31m\]\A \[\033[01;32m\]\u \[\033[02;36m\]\H \[\033[01;34m\]`pwd | sed "s#\(/[^/]\{1,\}/[^/]\{1,\}/[^/]\{1,\}/\).*\(/[^/]\{1,\}/[^/]\{1,\}\)/\{0,1\}#\1_\2#g"` \[\033[00;33m\]$(git_branch)\[\033[00m\]\n\$ '
